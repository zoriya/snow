{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended"
	],
	"ignoreTests": true,
	"packageRules": [
		{
			"matchUpdateTypes": [
				"minor",
				"patch",
				"pin",
				"digest"
			],
			"automerge": true
		}
	],
	"argocd": {
		"managerFilePatterns": [
			"/apps/.+\\.yaml$/"
		]
	}
}
