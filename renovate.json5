{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended"
	],
	"ignoreTests": true,
	"packageRules": [
		{
			"matchUpdateTypes": [
				"minor",
				"patch",
				"pin",
				"digest"
			],
			"automerge": true
		}
	],
	"argocd": {
		"managerFilePatterns": [
			"/apps/.+\\.yaml$/"
		]
	},
	"regexManagers": [
		{
			"description": "Update docker image references",
			"managerFilePatterns": [
				"/\\.yaml$/",
				"/\\.yml$/"
			],
			"matchStrings": [
				"image: (?<depName>.*?):(?<currentValue>.*?)\\s+"
			],
			"datasourceTemplate": "docker"
		}
	]
}
